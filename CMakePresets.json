{
  "buildPresets": [
    {
      "configuration": "Debug",
      "configurePreset": "clang",
      "displayName": "Build with Ninja/Clang (Debug)",
      "jobs": 8,
      "name": "clang-debug"
    },
    {
      "configuration": "Release",
      "configurePreset": "clang",
      "displayName": "Build with Ninja/Clang (Release)",
      "jobs": 8,
      "name": "clang-release"
    }
  ],
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 30,
    "patch": 0
  },
  "configurePresets": [
    {
      "binaryDir": "${fileDir}/Builds/${presetName}",
      "cacheVariables": {
        "BUILD_SHARED_LIBS": {
          "type": "BOOL",
          "value": "OFF"
        },
        "CMAKE_COLOR_DIAGNOSTICS": {
          "type": "BOOL",
          "value": "ON"
        },
        "CMAKE_EXPORT_COMPILE_COMMANDS": {
          "type": "BOOL",
          "value": "ON"
        },
        "CMAKE_OPTIMIZE_DEPENDENCIES": {
          "type": "BOOL",
          "value": "ON"
        },
        "CTEST_NO_TESTS_ACTION": {
          "type": "STRING",
          "value": "error"
        },
        "CTEST_OUTPUT_ON_FAILURE": {
          "type": "BOOL",
          "value": "ON"
        },
        "CTEST_PROGRESS_OUTPUT": {
          "type": "BOOL",
          "value": "ON"
        },
        "DOXYGEN_WARN_LOGFILE": {
          "type": "FILEPATH",
          "value": "${sourceDir}/logs/Doxygen.log"
        }
      },
      "hidden": true,
      "name": "base",
      "warnings": {
        "deprecated": false,
        "dev": false,
        "systemVars": false,
        "uninitialized": false,
        "unusedCli": false
      }
    },
    {
      "cacheVariables": {
        "CMAKE_CXX_COMPILER": {
          "type": "STRING",
          "value": "clang++"
        },
        "CMAKE_C_COMPILER": {
          "type": "STRING",
          "value": "clang"
        }
      },
      "displayName": "Build with Ninja & Clang",
      "generator": "Ninja Multi-Config",
      "inherits": "base",
      "name": "clang"
    },
    {
      "cacheVariables": {
        "CMAKE_CXX_COMPILER": {
          "type": "STRING",
          "value": "g++-14"
        },
        "CMAKE_C_COMPILER": {
          "type": "STRING",
          "value": "gcc-14"
        }
      },
      "displayName": "Build with Ninja & GCC",
      "generator": "Ninja Multi-Config",
      "inherits": "base",
      "name": "gcc"
    },
    {
      "cacheVariables": {
        "CMAKE_MSVC_RUNTIME_LIBRARY": {
          "type": "STRING",
          "value": "MultiThreaded$<$<CONFIG:Debug>:Debug>"
        }
      },
      "condition": {
        "lhs": "${hostSystemName}",
        "rhs": "Windows",
        "type": "equals"
      },
      "displayName": "Build with MSVC",
      "generator": "Visual Studio 17 2022",
      "inherits": "base",
      "name": "msvc"
    }
  ],
  "version": 6
}
